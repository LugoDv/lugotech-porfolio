---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";

interface Props {
  class?: string;
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <!-- seo -->
    <meta
      name="description"
      content="Portfolio oficial de Lugotech. Desarrollador Full-Stack especializado en la creación de aplicaciones web. Explora mis proyectos, arquitectura de software y soluciones digitales."
    />

    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://lugotech.dev/" />
    <meta property="og:title" content="Lugotech | Dev web full-stack" />
    <meta
      property="og:description"
      content="Explora mis proyectos y trayectoria tecnológica."
    />
    <meta property="og:image" content="/og-logo.png" />
    <ClientRouter />

    <title>Lugo tech</title>
  </head>
  <body class={Astro.props.class}>
    <slot />

    <!-- Intersection Observer para animaciones de reveal -->
    <script is:inline>
      let observerInstance = null;

      function initializeObserver() {
        // Limpiar observer anterior si existe
        if (observerInstance) {
          document.querySelectorAll(".item-revelar").forEach((el) => {
            observerInstance.unobserve(el);
          });
        }

        const observerConfig = { threshold: 0.1 };
        observerInstance = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add("animate-in");
              observerInstance.unobserve(entry.target);
            }
          });
        }, observerConfig);

        document.querySelectorAll(".item-revelar").forEach((el) => {
          observerInstance.observe(el);
        });
      }

      initializeObserver();

      document.addEventListener("astro:page-load", () => {
        initializeObserver();
      });
    </script>

    <!-- Flowbite - Importado desde npm -->
    <script is:inline>
      import * as flowbite from "flowbite";

      // Inicializar Flowbite en carga inicial
      flowbite.initFlowbite();

      // Reinicializar Flowbite después de navegación con ClientRouter
      document.addEventListener("astro:page-load", () => {
        flowbite.initFlowbite();
      });
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

---
import Button from "./Button.astro";
import IconsTecnology from "./IconsTecnology.astro";
---

<section id="contact">
  <div class="container mx-auto px-4 py-20 text-center">
    <h2 class="text-4xl font-bold mb-4 dark:text-white">Get in Touch</h2>
    <p class="font-medium text-lg text-body dark:text-body-light mb-8">
      Have a project in mind or just want to say hello? I'd love to hear from
      you!
    </p>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
      <!-- Formulario e Información en una sola isla -->
      <div
        class="contact-form bg-neutral-primary-soft border border-Border dark:border-Border-dark rounded-base shadow-xs p-8"
      >
        <h3
          class="text-2xl font-bold text-Text-dark dark:text-Text-light mb-6 text-left"
        >
          Send a Message
        </h3>
        <form class="space-y-6 text-left">
          <div>
            <label
              for="name"
              class="block mb-2 text-sm font-medium text-Text-dark dark:text-Text-light"
            >
              Name
            </label>
            <input
              type="text"
              id="name"
              class="bg-Background-light dark:bg-Background-dark border border-Border dark:border-Border-dark text-Text-dark dark:text-Text-light text-sm rounded-base focus:ring-2 focus:ring-Orange-vibrant focus:border-Orange-vibrant block w-full px-4 py-3 shadow-xs placeholder:text-body dark:placeholder:text-body-light"
              placeholder="Your name"
              required
            />
          </div>

          <div>
            <label
              for="email"
              class="block mb-2 text-sm font-medium text-Text-dark dark:text-Text-light"
            >
              Email
            </label>
            <input
              type="email"
              id="email"
              class="bg-Background-light dark:bg-Background-dark border border-Border dark:border-Border-dark text-Text-dark dark:text-Text-light text-sm rounded-base focus:ring-2 focus:ring-Orange-vibrant focus:border-Orange-vibrant block w-full px-4 py-3 shadow-xs placeholder:text-body dark:placeholder:text-body-light"
              placeholder="your.email@example.com"
              required
            />
          </div>

          <div>
            <label
              for="message"
              class="block mb-2 text-sm font-medium text-Text-dark dark:text-Text-light"
            >
              Message
            </label>
            <textarea
              id="message"
              rows="5"
              class="bg-Background-light dark:bg-Background-dark border border-Border dark:border-Border-dark text-Text-dark dark:text-Text-light text-sm rounded-base focus:ring-2 focus:ring-Orange-vibrant focus:border-Orange-vibrant block w-full px-4 py-3 shadow-xs placeholder:text-body dark:placeholder:text-body-light resize-none"
              placeholder="Write your message here..."
              required></textarea>
          </div>

          <Button variant="primary"> Send Message </Button>
        </form>
      </div>

      <!-- Información de Contacto en una sola isla -->
      <div
        class="contact-info bg-neutral-primary-soft border border-Border dark:border-Border-dark rounded-base shadow-xs p-8 space-y-6 text-left"
      >
        <h3 class="text-2xl font-bold text-Text-dark dark:text-Text-light mb-4">
          Contact Information
        </h3>

        <!-- Email -->
        <div
          class="flex items-start gap-4 pb-4 border-b border-Border dark:border-Border-dark"
        >
          <div
            class="bg-Orange-vibrant/10 dark:bg-Orange-vibrant-dark/10 p-3 rounded-base shrink-0"
          >
            <svg
              class="w-6 h-6 text-Orange-vibrant dark:text-Orange-vibrant-dark"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
          </div>
          <div>
            <h4 class="font-bold text-Text-dark dark:text-Text-light mb-1">
              Email
            </h4>
            <a
              href="mailto:contact@example.com"
              class="text-body dark:text-body-light hover:text-Orange-vibrant dark:hover:text-Orange-vibrant-dark transition-colors"
            >
              contact@example.com
            </a>
          </div>
        </div>

        <!-- Phone -->
        <div
          class="flex items-start gap-4 pb-4 border-b border-Border dark:border-Border-dark"
        >
          <div
            class="bg-Orange-vibrant/10 dark:bg-Orange-vibrant-dark/10 p-3 rounded-base shrink-0"
          >
            <svg
              class="w-6 h-6 text-Orange-vibrant dark:text-Orange-vibrant-dark"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
          </div>
          <div>
            <h4 class="font-bold text-Text-dark dark:text-Text-light mb-1">
              Phone
            </h4>
            <a
              href="tel:+1234567890"
              class="text-body dark:text-body-light hover:text-Orange-vibrant dark:hover:text-Orange-vibrant-dark transition-colors"
            >
              +1 (234) 567-890
            </a>
          </div>
        </div>

        <!-- Location -->
        <div
          class="flex items-start gap-4 pb-4 border-b border-Border dark:border-Border-dark"
        >
          <div
            class="bg-Orange-vibrant/10 dark:bg-Orange-vibrant-dark/10 p-3 rounded-base shrink-0"
          >
            <svg
              class="w-6 h-6 text-Orange-vibrant dark:text-Orange-vibrant-dark"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <div>
            <h4 class="font-bold text-Text-dark dark:text-Text-light mb-1">
              Location
            </h4>
            <p class="text-body dark:text-body-light">
              San Francisco, CA<br />United States
            </p>
          </div>
        </div>

        <!-- Social -->
        <div>
          <h4 class="font-bold text-Text-dark dark:text-Text-light mb-3">
            Connect with me
          </h4>
          <div class="flex gap-4">
            <a
              href="#"
              class="text-Text-dark dark:text-Text-light hover:text-Orange-vibrant dark:hover:text-Orange-vibrant-dark transition-colors"
              aria-label="GitHub"
            >
              <IconsTecnology name="Github" size={32} />
            </a>
            <a
              href="#"
              class="text-Text-dark dark:text-Text-light hover:text-Orange-vibrant dark:hover:text-Orange-vibrant-dark transition-colors"
              aria-label="LinkedIn"
            >
              <IconsTecnology name="Linkedin" size={32} />
            </a>
            <a
              href="#"
              class="text-Text-dark dark:text-Text-light hover:text-Orange-vibrant dark:hover:text-Orange-vibrant-dark transition-colors"
              aria-label="Twitter"
            >
              <IconsTecnology name="X" size={32} />
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

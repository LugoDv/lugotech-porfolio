---
import Button from "./Button.astro";
import CodeIcon from "./CodeIcon.astro";
import MessageIcon from "./MessageIcon.astro";
---

<style>
  .bg-hero {
    background-image: url("/pattern-code.png");
    background-repeat: repeat;
    background-size: auto;
  }
</style>

<section
  id="hero"
  class="relative min-h-screen flex items-center pt-24 pb-16 bg-Background-light dark:bg-Background-dark overflow-hidden"
>
  <!-- Background Pattern -->
  <div class="absolute inset-0 bg-hero opacity-10"></div>

  <!-- Gradient Overlays -->
  <div class="absolute top-0 left-0 w-96 h-96 bg-Orange-vibrant/20 blur-3xl">
  </div>
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-Cyan-accent/20 blur-3xl">
  </div>

  <!-- Content -->
  <div class="container mx-auto px-4 md:px-6 lg:px-8 relative z-10">
    <div class="max-w-4xl mx-auto text-center space-y-8">
      <!-- Badge -->
      <div
        class="inline-flex items-center gap-2 px-4 py-2 bg-Orange-vibrant/10 border border-Orange-vibrant/30 rounded-full text-sm text-Text-dark dark:text-Text-light"
      >
        <span class="relative flex h-2 w-2">
          <span
            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-Orange-vibrant opacity-75"
          ></span>
          <span
            class="relative inline-flex rounded-full h-2 w-2 bg-Orange-vibrant"
          ></span>
        </span>
        Disponible para nuevos proyectos
      </div>
      <div class="flex justify-center">
        <img
          class="object-contain w-48 h-48 rounded-full md:w-64 md:h-64 lg:w-72 lg:h-72"
          src="avatar.svg"
          alt="avatar"
          srcset=""
        />
      </div>

      <!-- Heading -->
      <div class="space-y-4">
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold text-Text-dark dark:text-Text-light"
        >
          Soluciones <span class="text-Orange-vibrant">Innovadoras</span>
          <br />
          para tu <span class="text-Cyan-accent">Proyecto</span>
        </h1>

        <p
          class="text-lg md:text-xl text-Text-dark/80 dark:text-Text-light/80 max-w-2xl mx-auto"
        >
          Desarrollo web moderno con las últimas tecnologías. Transformando
          ideas en experiencias digitales excepcionales.
        </p>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button variant="primary" href="#projects">
          <CodeIcon /> Ver Proyectos
        </Button>
        <Button variant="outline" href="#contact">
          <MessageIcon /> Contactar
        </Button>
      </div>
    </div>
  </div>
</section>

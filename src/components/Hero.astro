<section
  id="hero"
  class="relative min-h-screen flex items-center pt-24 pb-16 bg-Background-light dark:bg-Background-dark overflow-hidden"
>
  <!-- Background Pattern -->
  <div
    class="absolute inset-0 bg-[url('/pattern-code.png')] bg-repeat opacity-5 pointer-events-none"
  >
  </div>

  <!-- Gradient Overlays -->
  <div class="absolute top-0 left-0 w-96 h-96 bg-Orange-vibrant/20 blur-3xl">
  </div>
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-Cyan-accent/20 blur-3xl">
  </div>

  <!-- Content -->
  <div class="container contenedor-revelar mx-auto px-4 md:px-6 relative z-10">
    <div class="max-w-4xl mx-auto text-center space-y-4 xl:space-y-6">
      <!-- Badge -->
      <div
        class="inline-flex items-center gap-2 px-4 py-2 bg-Orange-vibrant/10 border border-Orange-vibrant/30 rounded-full text-sm xl:text-xs xl:px-3 xl:py-1.5 text-Text-dark dark:text-Text-light"
      >
        <span class="relative flex h-2 w-2">
          <span
            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-Orange-vibrant dark:bg-Orange-vibrant-dark opacity-75"
          ></span>
          <span
            class="relative inline-flex rounded-full h-2 w-2 bg-Orange-vibrant dark:bg-Orange-vibrant-dark"
          ></span>
        </span>
        Disponible para nuevos proyectos
      </div>
      <div class="flex justify-center">
        <img
          transition:name="perfil"
          class="object-contain translate-x-1.5 w-48 h-48 rounded-full md:w-64 md:h-64 lg:w-72 lg:h-72 xl:w-56 xl:h-56"
          src="avatar.svg"
          alt="avatar"
          srcset=""
        />
      </div>

      <!-- Heading -->
      <div class="item-revelar space-y-4 xl:space-y-3">
        <h1
          class="text-3xl md:text-5xl lg:text-6xl xl:text-5xl font-bold text-Text-dark dark:text-Text-light"
        >
          Fabian Lugo
          <br />
          <span class="text-Cyan-accent dark:text-Cyan-accent-dark">
            Desarrollador</span
          >
          web
        </h1>

        <p
          class="text-lg md:text-xl xl:text-lg text-Text-dark/80 dark:text-Text-light/80 max-w-2xl mx-auto"
        >
          Creo arquitecturas s√≥lidas y experiencias fluidas. Transformo
          problemas complejos en soluciones digitales.
        </p>
      </div>

      <!-- CTA Buttons -->
      <div class="item-revelar flex flex-col sm:flex-row gap-4 justify-center">
        <Button variant="primary" href="#projects">
          <CodeIcon /> Ver Proyectos
        </Button>
        <Button variant="outline" href="#contact">
          <MessageIcon /> Contactar
        </Button>
      </div>
    </div>
  </div>
</section>

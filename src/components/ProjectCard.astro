---
import Badge from "./badge.astro";
import IconsTecnology from "./IconsTecnology.astro";

interface Props {
  title: string;
  description: string;
  imageUrl: string;
  projectUrl: string;
  tecnologies?: string[];
  icons?: string;
}

const {
  title,
  description,
  imageUrl,
  projectUrl,
  tecnologies = [],
  icons = "",
} = Astro.props;
---

<div
  class="bg-neutral-primary-soft block max-w-sm border border-default rounded-base shadow-xs"
>
  <a href="#">
    <img class="rounded-t-base" src="/docs/images/blog/image-1.jpg" alt="" />
  </a>
  <div class="p-6 gap-2 flex flex-col">
    <a href="#">
      <h5 class="mt-3 mb-6 text-2xl font-semibold tracking-tight text-heading">
        Taskify App
      </h5>
    </a>
    <p class="text-body font-medium">
      A task management app with real-time collaboration, built using React,
      Node.js, and MongoDB.
    </p>
    <div class="flex flex-wrap gap-2 mt-4">
      {tecnologies.map((tech) => <Badge label={tech} />)}
    </div>
    <div class="mt-4">
      <IconsTecnology
        name="github"
        class="hover:text-Orange-vibrant dark:hover:text-Orange-vibrant-dark dark:text-gray-100 cursor-pointer"
      />
    </div>
  </div>
</div>

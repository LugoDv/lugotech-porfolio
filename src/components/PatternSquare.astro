---
interface Props {
  class?: string;
}
const { class: className = "" } = Astro.props;
---

<style>
  .pattern-light {
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Crect width='60' height='60' fill='none' stroke='%23000000' stroke-opacity='0.96' stroke-width='1'/%3E%3Crect width='40' height='40' x='10' y='10' fill='none' stroke='%23000000' stroke-opacity='0.96' stroke-width='1'/%3E%3Crect width='20' height='20' x='20' y='20' fill='none' stroke='%23000000' stroke-opacity='0.96' stroke-width='1'/%3E%3C/svg%3E");
    background-repeat: repeat;
    background-size: 60px 60px;
  }

  :global(.dark) .pattern-dark {
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Crect width='60' height='60' fill='none' stroke='%23ffffff' stroke-opacity='0.96' stroke-width='1'/%3E%3Crect width='40' height='40' x='10' y='10' fill='none' stroke='%23ffffff' stroke-opacity='0.96' stroke-width='1'/%3E%3Crect width='20' height='20' x='20' y='20' fill='none' stroke='%23ffffff' stroke-opacity='0.96' stroke-width='1'/%3E%3C/svg%3E");
    background-repeat: repeat;
    background-size: 60px 60px;
  }
</style>

<div class:list={["pattern-light pattern-dark w-full h-full", className]}></div>

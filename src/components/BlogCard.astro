---
interface Props {
  title: string;
  excerpt: string;
  imageUrl: string;
  postUrl: string;
  tags: string[];
  date: string;
}

const { title, excerpt, imageUrl, postUrl, tags, date } = Astro.props;
---

<article
  class="bg-neutral-primary-soft border border-Border dark:border-Border-dark rounded-base shadow-xs hover:shadow-md transition-all duration-300 hover:-translate-y-1 flex flex-col md:flex-row overflow-hidden group"
>
  <!-- Image -->
  <div class="w-full md:w-1/3 shrink-0">
    <a href={postUrl} class="block overflow-hidden">
      <img
        src={imageUrl}
        alt={title}
        class="w-full h-48 md:h-full object-cover group-hover:scale-105 transition-transform duration-300"
      />
    </a>
  </div>

  <!-- Content -->
  <div class="p-6 font-medium md:w-2/3 flex flex-col justify-between">
    <div>
      <h3 class="text-xl font-bold text-Text-dark dark:text-Text-light mb-3">
        <a
          href={postUrl}
          class="hover:text-Orange-vibrant dark:hover:text-Orange-vibrant-dark transition-colors"
        >
          {title}
        </a>
      </h3>

      <p class="text-body dark:text-body-light mb-4 line-clamp-3">
        {excerpt}
      </p>

      <div class="flex flex-wrap gap-2 mb-4">
        {
          tags.map((tag) => (
            <span class="px-3 py-1 bg-Orange-vibrant/10 dark:bg-Orange-vibrant-dark/10 text-Orange-vibrant dark:text-Orange-vibrant-dark rounded-full text-sm font-medium">
              {tag}
            </span>
          ))
        }
      </div>
    </div>

    <div class="flex items-center justify-between">
      <div
        class="text-body dark:text-body-light text-sm flex items-center gap-2"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path
            fill-rule="evenodd"
            d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
            clip-rule="evenodd"></path>
        </svg>
        <span>{date}</span>
      </div>

      <a
        href={postUrl}
        class="text-Orange-vibrant dark:text-Orange-vibrant-dark hover:text-Cyan-accent dark:hover:text-Cyan-accent-dark font-medium flex items-center gap-2 group/link"
      >
        Read More
        <svg
          class="w-4 h-4 group-hover/link:translate-x-1 transition-transform"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</article>

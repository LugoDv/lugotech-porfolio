---
interface Props {
  href?: string;
  variant?: "primary" | "secondary" | "outline";
  disabled?: boolean;
  type?: "button" | "submit" | "reset";
  class?: string;
}

const {
  href,
  variant = "primary",
  disabled = false,
  type = "button",
  class: className = "",
} = Astro.props;

// Estilos base - agregado flex items-center justify-center gap-2
const baseClasses =
  "px-8 py-4 font-semibold rounded-lg transition-all shadow-lg hover:shadow-xl inline-flex items-center justify-center gap-2";

// Variantes
const variantClasses = {
  primary:
    "bg-Orange-vibrant hover:bg-Orange-vibrant/90 text-Orange-vibrant-text",
  secondary: "bg-Cyan-accent hover:bg-Cyan-accent/90 text-Cyan-accent-text",
  outline:
    "bg-transparent hover:bg-Neutral-100 dark:hover:bg-Neutral-700 text-Text-dark dark:text-Text-light border-2 border-Neutral-300 dark:border-Neutral-600",
};

const disabledClasses = disabled ? "opacity-50 cursor-not-allowed" : "";

const classes = `${baseClasses} ${variantClasses[variant]} ${disabledClasses} ${className}`;
---

{
  href ? (
    <a href={href} class={classes}>
      <slot />
    </a>
  ) : (
    <button type={type} class={classes} disabled={disabled}>
      <slot />
    </button>
  )
}

---
import ToggleGrid from "./ToggleGrid.astro";
---

<nav
  class="bg-Background-light dark:bg-Forenground-dark fixed w-full z-20 top-0 start-0 border-b border-Neutral-300 dark:border-Neutral-700-dark"
>
  <div
    class="max-w-7x1 flex flex-wrap items-center justify-between mx-auto p-2 md:p-3 xl:py-0 xl:text-sm"
  >
    <!-- Logo -->
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse -my-2">
      <img
        src="logo.webp"
        class="h-16 md:h-20 lg:h-24 xl:h-20 w-auto dark:bg-transparent object-contain"
        alt="Logo"
      />
    </a>

    <!-- Desktop: Theme Toggle y Hamburger Menu -->
    <div
      class="flex items-center md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse"
    >
      <!-- Theme Toggle Button -->
      <button
        id="theme-toggle"
        type="button"
        class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-Background-dark focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5"
        aria-label="Toggle dark mode"
      >
        <svg
          id="theme-toggle-dark-icon"
          class="hidden w-5 h-5"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
          ></path></svg
        >
        <svg
          id="theme-toggle-light-icon"
          class="hidden w-5 h-5"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
            fill-rule="evenodd"
            clip-rule="evenodd"></path></svg
        >
      </button>

      <!-- Mobile Hamburger Button -->
      <button
        data-collapse-toggle="navbar-default"
        type="button"
        class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-Text-dark dark:text-Text-light rounded-lg md:hidden hover:bg-Neutral-100 dark:hover:bg-Neutral-600 hover:text-gray-800 focus:outline-none focus:ring-2 focus:ring-Orange-vibrant cursor-pointer"
        aria-controls="navbar-default"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <ToggleGrid size={20} strokeWidth={1.5} class="w-5 h-5" />
      </button>
    </div>

    <!-- Desktop Navigation Menu -->
    <div
      class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1"
      id="navbar-default"
    >
      <ul
        class="flex flex-col p-2 mt-2 font-medium border rounded-lg border-default bg-Background-light dark:bg-Forenground-dark md:p-0 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0"
      >
        <li>
          <a
            href="/"
            class="block px-3 py-2 text-heading rounded bg-Orange-vibrant md:bg-transparent md:hover:text-Orange-vibrant md:p-0"
            aria-current="page">Home</a
          >
        </li>
        <li>
          <a
            href="#about"
            class="block px-3 py-2 rounded text-heading hover:bg-neutral-tertiary md:bg-transparent md:hover:text-Orange-vibrant md:p-0"
            >About</a
          >
        </li>
        <li>
          <a
            href="#projects"
            class="block px-3 py-2 rounded text-heading hover:bg-neutral-tertiary md:bg-transparent md:hover:text-Orange-vibrant md:p-0"
            >Projects</a
          >
        </li>
        <!-- <li>
          <a
            href="/services"
            class="block px-3 py-2 rounded text-heading hover:bg-neutral-tertiary md:bg-transparent md:hover:text-Orange-vibrant md:p-0"
            >Services</a
          >
        </li> -->
        <!-- <li>
          <a
            href="/pricing"
            class="block px-3 py-2 rounded text-heading hover:bg-neutral-tertiary md:bg-transparent md:hover:text-Orange-vibrant md:p-0"
            >Pricing</a
          >
        </li> -->
        <li>
          <a
            href="#contact  "
            class="block px-3 py-2 rounded text-heading hover:bg-neutral-tertiary md:bg-transparent md:hover:text-Orange-vibrant md:p-0"
            >Contact</a
          >
        </li>
      </ul>
    </div>
  </div>

  <script is:inline>
    function initializeNavbar() {
      // On page load or when changing themes, best to add inline in `head` to avoid FOUC
      if (
        localStorage.getItem("color-theme") === "dark" ||
        (!("color-theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }

      const themeToggleDarkIcon = document.getElementById(
        "theme-toggle-dark-icon"
      );
      const themeToggleLightIcon = document.getElementById(
        "theme-toggle-light-icon"
      );

      // Change the icons inside the button based on previous settings
      if (
        localStorage.getItem("color-theme") === "dark" ||
        (!("color-theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches)
      ) {
        themeToggleLightIcon?.classList.remove("hidden");
      } else {
        themeToggleDarkIcon?.classList.remove("hidden");
      }

      const themeToggleBtn = document.getElementById("theme-toggle");

      if (themeToggleBtn) {
        themeToggleBtn.addEventListener("click", function () {
          // toggle icons inside button
          themeToggleDarkIcon?.classList.toggle("hidden");
          themeToggleLightIcon?.classList.toggle("hidden");

          // if set via local storage previously
          if (localStorage.getItem("color-theme")) {
            if (localStorage.getItem("color-theme") === "light") {
              document.documentElement.classList.add("dark");
              localStorage.setItem("color-theme", "dark");
            } else {
              document.documentElement.classList.remove("dark");
              localStorage.setItem("color-theme", "light");
            }

            // if NOT set via local storage previously
          } else {
            if (document.documentElement.classList.contains("dark")) {
              document.documentElement.classList.remove("dark");
              localStorage.setItem("color-theme", "light");
            } else {
              document.documentElement.classList.add("dark");
              localStorage.setItem("color-theme", "dark");
            }
          }
        });
      }

      // ===== MOBILE MENU TOGGLE =====
      const hamburger = document.querySelector(
        '[data-collapse-toggle="navbar-default"]'
      );
      const navbarMenu = document.getElementById("navbar-default");

      if (hamburger && navbarMenu) {
        hamburger.addEventListener("click", function () {
          // Toggle hidden class
          navbarMenu.classList.toggle("hidden");

          // Update aria-expanded attribute
          const isExpanded = !navbarMenu.classList.contains("hidden");
          hamburger.setAttribute("aria-expanded", isExpanded.toString());
        });

        // Close menu cuando se hace click en un link
        navbarMenu.querySelectorAll("a").forEach((link) => {
          link.addEventListener("click", (event) => {
            // Prevenir que el evento suba hasta el hamburguesa
            event.stopPropagation();

            navbarMenu.classList.add("hidden");
            hamburger.setAttribute("aria-expanded", "false");
          });
        });
      }
    }

    // Ejecutar en la carga inicial
    initializeNavbar();

    // Ejecutar en cada navegaciÃ³n con ClientRouter
    document.addEventListener("astro:page-load", () => {
      initializeNavbar();
    });
  </script>
</nav>

---
import Layout from "../layouts/Layout.astro";
import LinkTreeItem from "../components/LinkTreeItem.astro";
import IconsTecnology from "../components/IconsTecnology.astro";
import LinkedInIcon from "../components/LinkedInIcon.astro";
import { Image } from "astro:assets";
---

<Layout class="dark">
  <main class="min-h-screen bg-Background-dark py-12 px-4">
    <div class="max-w-4xl mx-auto flex flex-col items-center">
      <div
        class="inline-flex items-center mb-4 gap-2 px-4 py-2 bg-Orange-vibrant/10 border border-Orange-vibrant/30 rounded-full text-xs xl:text-xs xl:px-3 xl:py-1.5 text-Text-dark dark:text-Text-light"
      >
        <span class="relative flex h-2 w-2">
          <span
            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-Orange-vibrant dark:bg-Cyan-accent-dark opacity-75"
          ></span>
          <span
            class="relative inline-flex rounded-full h-2 w-2 bg-Orange-vibrant dark:bg-Cyan-accent-dark"
          ></span>
        </span>
        Disponible
      </div>

      <div class="text-center mb-12">
        <div class="m-auto relative inline-block">
          <Image
            transition:name="perfil"
            src="/avatar.svg"
            loading={"eager"}
            alt="Avatar de Fabian Lugo"
            width={128}
            height={128}
            class="w-32 h-32 translate-x-2 rounded-full mb:w-64 mb:h-64"
          />
        </div>
        <!-- <div class="relative m-auto inline-block blur-shadow">
          <img
            class="w-32 h-32 p-1 rounded-full ring-2 ring-default"
            src="/src/assets/images/perfil.png"
            alt=""
          />
        </div> -->

        <h1 class="text-2xl font-bold text-Text-dark dark:text-Text-light">
          Fabian Lugo
        </h1>
        <p class="text-md text-Text-dark/80 dark:text-Text-light/80 mb-6">
          Desarrollador Full Stack | Creador de contenido
        </p>

        <!-- Enlaces principales -->
        <div class="space-y-4 mb-8 w-full md:w-2xl">
          <LinkTreeItem href="/" description="Ver mi sitio web">
            <IconsTecnology name="astro" size={24} slot="icon" />
          </LinkTreeItem>
          <LinkTreeItem
            href="https://www.linkedin.com/in/fabian-lugo-/"
            description="Conéctate conmigo"
          >
            <LinkedInIcon size={24} slot="icon" />
          </LinkTreeItem>

          <LinkTreeItem
            href="https://github.com/LugoDv"
            description="Mira mi código"
          >
            <IconsTecnology name="github" size={24} slot="icon" />
          </LinkTreeItem>

          <LinkTreeItem
            href="mailto:falugopersonal@gmail.com"
            description="Envíame un mensaje"
          >
            <IconsTecnology name="gmail" size={24} slot="icon" />
          </LinkTreeItem>

          <LinkTreeItem
            href="https://www.tiktok.com/@fabian_lugo_"
            description="Sígueme en TikTok"
          >
            <IconsTecnology name="tiktok" size={24} slot="icon" />
          </LinkTreeItem>
        </div>
      </div>
    </div>
  </main>

  <style>
    /* Animación de entrada opcional */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    main > div > div {
      animation: fadeInUp 0.5s ease-out;
    }
  </style>
</Layout>
